<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E8DD"
    tools:context=".ProfilePhotoActivity">

    <!-- Header Section (Navigation Bar) using ConstraintLayout for layering -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BEC6FB"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header Left Icon (Back Arrow) - Navigates back -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="?attr/homeAsUpIndicator"
            app:tint="#051646"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/photoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barriecito"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="PROFILE PHOTO"
            android:textColor="#051646"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settingsIconContainer"
            app:layout_constraintStart_toEndOf="@id/backIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Right Icons - Using a LinearLayout to group the two right icons -->
        <LinearLayout
            android:id="@+id/settingsIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/profile_icon_foreground" />

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/settings_icon_foreground" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <!-- Main Profile Photo Preview (using CardView for circular crop) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profilePhotoCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#9889CD"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/profilePhotoOuterCard"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/profile_pic_2_foreground" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <!-- Profile Photo Options (Grid) -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="3"
            android:layout_marginTop="16dp">

            <!-- Avatar 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_1_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Avatar 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_3_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Avatar 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_4_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Avatar 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_5_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Avatar 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_6_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <!-- Avatar 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/AvatarCard6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:backgroundTint="#CECADF"
                app:cardCornerRadius="40dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/AvatarOuterCard6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/AvatarPicture6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/profile_pic_2_foreground" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
