<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E8DD"
    tools:context=".SettingsActivity">

    <!-- Header Section (Navigation Bar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BEC6FB"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header Left Icon (Book) - Aligned left/center, Z-order doesn't matter much here -->
        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/wordventure_logo_foreground"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title Text - Takes up the full width, allowing icons to overlap its margins -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="#051646"
            android:textSize="35sp"
            android:textStyle="bold"
            android:fontFamily="@font/barriecito"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bookIcon"
            app:layout_constraintEnd_toStartOf="@id/settingsIconContainer"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Header Right Icons - Using a LinearLayout to group the two right icons -->
        <LinearLayout
            android:id="@+id/settingsIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Profile Icon - Navigates to Profile Page -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/profile_icon_foreground"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Settings Icon - Navigates to Settings Page (Current Page) -->
            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/settings_icon_foreground"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <!-- Dark Mode and Sound Toggles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="#9889CD"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:textColor="#051646"
                    android:padding="10dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:showText="false"
                        app:textOff=""
                        app:textOn=""
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#6750A4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingEnd="16dp"
                        android:text="Dark Mode"
                        android:textColor="#051646"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sound Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9889CD"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/soundSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:showText="false"
                        app:textOff=""
                        app:textOn=""
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#6750A4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingEnd="16dp"
                        android:text="Sound"
                        android:textColor="#051646"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


    </LinearLayout>

        <!-- Main Buttons -->
        <!-- Edit Profile Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#BCB3DF"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/editProfileButton"
                style="@style/AppButton"
                android:layout_marginTop="5dp"
                android:text="Edit Profile"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Language Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#BCB3DF"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/languageButton"
                style="@style/AppButton"
                android:layout_marginTop="5dp"
                android:text="Language"
                android:layout_gravity="center" />
            />
        </androidx.cardview.widget.CardView>

        <!-- Help & Support Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#BCB3DF"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/helpSupportButton"
                style="@style/AppButton"
                android:layout_marginTop="5dp"
                android:text="Help &amp; Support"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
