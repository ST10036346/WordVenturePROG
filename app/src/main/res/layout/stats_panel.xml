<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="#E8E8D9"
    android:elevation="8dp">

    <!-- Title: "CONGRATULATIONS!" or "NEXT TIME!" -->
    <TextView
        android:id="@+id/stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONGRATULATIONS!"
        android:fontFamily="@font/barriecito"
        android:textColor="#051646"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Main Stats Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D1C4E9"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Top row of stats: Played, Win Streak, Max Streak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/games_played_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="154"
                    android:textColor="#051646"
                    android:textSize="40sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Games Played"
                    android:textColor="#051646"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/win_streak_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textColor="#051646"
                    android:textSize="40sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Win Streak"
                    android:textColor="#051646"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/max_streak_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="73"
                    android:textColor="#051646"
                    android:textSize="40sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Streak"
                    android:textColor="#051646"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Guess Distribution Section (Placeholder) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Guess Distribution"
            android:textColor="#051646"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/guess_distribution_chart"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Guess distribution chart placeholder"/>

    </LinearLayout>

    <!-- Buttons at the bottom -->
    <Button
        android:id="@+id/play_more_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#C9BFFB"
        android:fontFamily="@font/barriecito"
        android:text="Play More"
        android:textColor="#051646"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C9BFFB"
        android:fontFamily="@font/barriecito"
        android:text="Back to Main Menu"
        android:textColor="#051646"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>